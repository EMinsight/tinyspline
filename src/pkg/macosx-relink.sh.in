#!/bin/bash

if [[ $# -ne 1 ]]
then
	SCRIPT_NAME=$(basename "$0")
	echo "Usage: ${SCRIPT_NAME} <obj_file>"
	exit -1
fi

LIBS=($(@CMAKE_OTOOL@ -L ${1} | tail -n +2 | cut -d' ' -f1))
for LIB in "${LIBS[@]}"
do
	if [[ ${LIB} == /opt/local/* || \
	      ${LIB} == *"HOMEBREW_PREFIX"* || \
	      ${LIB} == *"HOMEBREW_CELLAR"* || \
	      ${LIB} == /Users/runner/hostedtoolcache/* ]]
	then
		LIB_DIR=$(dirname ${LIB})
		LIB_NAME=$(basename ${LIB})
		echo "Replacing ${LIB} with @rpath/${LIB_NAME}"
		@CMAKE_INSTALL_NAME_TOOL@ \
			-change ${LIB} @rpath/${LIB_NAME} ${1}
		echo "Adding ${LIB_DIR} to rpath"
		@CMAKE_INSTALL_NAME_TOOL@ \
			-add_rpath ${LIB_DIR} ${1}
	fi
done
